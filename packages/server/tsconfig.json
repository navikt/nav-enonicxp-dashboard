{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "ESNext",
        "skipLibCheck": true,
        "outDir": "../../dist/server",

        /* Bundler mode */
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": false,

        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["server.ts"]
}
